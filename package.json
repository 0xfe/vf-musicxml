{
  "name": "musicxml",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript MusicXML parser and VexFlow renderer",
  "type": "module",
  "engines": {
    "node": ">=20.11"
  },
  "exports": {
    ".": {
      "types": "./dist/public/index.d.ts",
      "import": "./dist/public/index.js"
    },
    "./testkit": {
      "types": "./dist/testkit/index.d.ts",
      "import": "./dist/testkit/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist coverage",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:svg": "vitest run tests/svg",
    "test:conformance": "vitest run tests/conformance",
    "test:conformance:report": "CONFORMANCE_REPORT_OUT_DIR=artifacts/conformance vitest run tests/conformance/execution.test.ts",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:headless": "npm run build && node scripts/run-headless-visual-regression.mjs",
    "test:visual:headless:update": "npm run build && node scripts/run-headless-visual-regression.mjs --update",
    "inspect:score": "npm run build && node scripts/inspect-score-headless.mjs",
    "eval:run": "npm run build && node scripts/run-evaluation.mjs",
    "vexflow:gaps:check": "npm run build && node scripts/check-vexflow-gap-registry.mjs",
    "vexflow:gaps:brief": "npm run build && node scripts/build-vexflow-upstream-brief.mjs",
    "patches:apply": "patch-package",
    "test:watch": "vitest",
    "corpus:lilypond:sync": "node scripts/sync-lilypond-corpus.mjs",
    "corpus:lilypond:import": "node scripts/import-lilypond-fixtures.mjs",
    "conformance:lilypond:promote": "npm run build && node scripts/promote-lilypond-conformance.mjs",
    "conformance:realworld:import": "npm run build && node scripts/import-realworld-samples.mjs",
    "demos:build": "npm run build && node scripts/build-demos.mjs",
    "demos:serve": "npm run demos:build && node scripts/serve-demos.mjs"
  },
  "peerDependencies": {
    "vexflow": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.58.2",
    "@resvg/resvg-js": "^2.6.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.13.1",
    "@types/pngjs": "^6.0.5",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "patch-package": "^8.0.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.4.2",
    "ssim.js": "^3.5.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vexflow": "4.2.3",
    "vitest": "^3.0.5",
    "yaml": "^2.7.0"
  },
  "dependencies": {
    "jsdom": "^28.0.0",
    "saxes": "^6.0.0"
  }
}
