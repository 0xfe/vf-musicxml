{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://musicxml.dev/schemas/conformance-fixture-meta.schema.json",
  "title": "Conformance Fixture Metadata",
  "type": "object",
  "required": ["id", "source", "category", "expected", "status"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "minLength": 1
    },
    "expected": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "status": {
      "type": "string",
      "enum": ["active", "skip"]
    },
    "parse_mode": {
      "type": "string",
      "enum": ["strict", "lenient"]
    },
    "notes": {
      "type": "string"
    },
    "linked_todo": {
      "type": "string"
    },
    "waivers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "collision_audit": {
      "type": "object",
      "required": ["selector"],
      "properties": {
        "selector": {
          "type": "string",
          "minLength": 1
        },
        "padding": {
          "type": "number"
        },
        "min_overlap_area": {
          "type": "number"
        },
        "max_overlaps": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
